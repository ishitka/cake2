<h3>会員情報編集</h3>

<%= form_with model: @customer do |f| %>
<table>
  <tr>
    <td>氏名</td>
    <td><%= f.text_field :first_name %></td>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= f.text_field :first_name_kana %></td>
    <td><%= f.text_field :last_name_kane %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>メールドレス</td>
    <td><%= f.text_field :email %></td>
  </tr>
</table>
<%= f.submit '編集内容を保存' %>.   <%= link_to '退会する', confirm_customer_path %>

<% end %>