<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :"名前"%> （性）<%= f.text_field :first_name, autofocus: true, autocomplete: "令和" %> （名）<%= f.text_field :last_name, autofocus: true, autocomplete: "道子" %>
  </div>
  
  <div class="field">
    <%= f.label :"フリガナ" %> (セイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "レイワ" %> (メイ)<%= f.text_field :last_name_kane, autofocus: true, autocomplete: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "0000000" %>
  </div>
  
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "東京都渋谷区代々木神園町0−0−0" %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "00000000000" %>
  </div>
  

  <div class="field">
    <%= f.label :"パスワード（６文字以上）" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<a href="/customers/sign_in">こちら</a><a>からログインしてください。</a>
