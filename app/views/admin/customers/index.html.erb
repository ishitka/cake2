<h3>会員一覧</h3>
<% @customers.each do |customer| %>
  <table>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <tr>
      <th><%= customer.id %></th>
      <th><%= link_to "#{customer.first_name} #{customer.last_name}", admin_customer_path(customer.id) %></th>
      <th><%= customer.email %></th>
      <th><%= customer.is_active %></th>
    </tr>
  </table>
<% end %>