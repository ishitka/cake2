<h3>商品新規登録</h3>

<%= form_with model: @item,url: admin_items_path do |f| %>
<p>商品画像</p>. <%= f.file_field :image, accept:"image/*" %>
<p>商品名</p>. <%= f.text_field :name %>
<p>商品説明</p>. <%= f.text_area :introduction %>
<p>ジャンル</p>  <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name) %>
<p>税抜価格</p>  <%= f.text_field :price %>
<p>販売ステータス</p>. <%= f.radio_button :is_status, "販売中" %>  <%= f.radio_button :is_status, "販売停止中" %>
<%= f.submit '新規登録' %>
<% end %>